@using Ranja.Solver

<div class="solver-status">
    <!-- Status Badge -->
    <div class="status-badge mb-4">
        @switch (Result)
        {
            case Solver.SolveResult.ConsistentStable:
                <div class="flex items-center p-3 bg-green-100 border border-green-200 rounded-lg">
                    <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                        <div class="font-medium text-green-800">Solution Consistent</div>
                        <div class="text-sm text-green-700">All values computed successfully</div>
                    </div>
                </div>
                break;
                
            case Solver.SolveResult.InconsistentButComplete:
                <div class="flex items-center p-3 bg-red-100 border border-red-200 rounded-lg">
                    <svg class="w-5 h-5 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                        <div class="font-medium text-red-800">Inconsistent Solution</div>
                        <div class="text-sm text-red-700">Conflicting values detected</div>
                    </div>
                </div>
                break;
                
            case Solver.SolveResult.MaxIterationsReached:
                <div class="flex items-center p-3 bg-yellow-100 border border-yellow-200 rounded-lg">
                    <svg class="w-5 h-5 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                    <div>
                        <div class="font-medium text-yellow-800">Max Iterations Reached</div>
                        <div class="text-sm text-yellow-700">Solution may be incomplete</div>
                    </div>
                </div>
                break;
        }
    </div>

    <!-- Statistics -->
    <div class="statistics space-y-3">
        <div class="stat-item flex justify-between items-center p-2 bg-gray-50 rounded">
            <span class="text-sm text-gray-600">Iterations</span>
            <span class="font-mono text-sm font-medium">@IterationCount</span>
        </div>
        
        <div class="stat-item flex justify-between items-center p-2 bg-gray-50 rounded">
            <span class="text-sm text-gray-600">Inconsistencies</span>
            <span class="font-mono text-sm font-medium @(Inconsistencies.Count > 0 ? "text-red-600" : "text-green-600")">
                @Inconsistencies.Count
            </span>
        </div>
    </div>

    <!-- Inconsistencies Details -->
    @if (Inconsistencies.Any())
    {
        <div class="inconsistencies mt-4">
            <h5 class="text-sm font-semibold text-gray-800 mb-2">Inconsistencies</h5>
            <div class="space-y-2 max-h-40 overflow-y-auto">
                @foreach (var inconsistency in Inconsistencies)
                {
                    <div class="inconsistency-item p-2 bg-red-50 border border-red-200 rounded text-xs text-red-800">
                        @inconsistency
                    </div>
                }
            </div>
        </div>
    }

    <!-- Legend -->
    <div class="legend mt-4 pt-4 border-t border-gray-200">
        <h5 class="text-xs font-semibold text-gray-600 mb-2">LEGEND</h5>
        <div class="space-y-1 text-xs text-gray-500">
            <div class="flex items-center">
                <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
                <span>Consistent values</span>
            </div>
            <div class="flex items-center">
                <div class="w-3 h-3 bg-red-500 rounded-full mr-2"></div>
                <span>Inconsistent values</span>
            </div>
            <div class="flex items-center">
                <div class="w-3 h-3 bg-blue-500 rounded-full mr-2"></div>
                <span>Clickable for details</span>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Solver.SolveResult Result { get; set; }
    [Parameter] public List<string> Inconsistencies { get; set; } = [];
    [Parameter] public int IterationCount { get; set; }
} 